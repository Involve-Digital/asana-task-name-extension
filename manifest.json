{
  "manifest_version": 3,
  "name": "Asana task name extension",
  "description": "Asana task name extension",
  "version": "2.0",
  "permissions": ["clipboardWrite", "storage"],
  "action": {
    "default_popup": "/popup/hello.html",
    "default_icon": {
      "16": "/images/icon.png",
      "48": "/images/icon.png",
      "128": "/images/icon.png"
    }
  },
  "icons": {
    "16": "/images/icon.png",
    "48": "/images/icon.png",
    "128": "/images/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://app.asana.com/*"],
      "js": ["/scripts/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["*://app.asana.com/*"],
      "resources": [
        "/icons/check.svg",
        "/icons/copy.svg",
        "/icons/cross.svg",
        "/icons/start.svg",
        "/icons/start-cr.svg"
      ]
    }
  ],
  "background": {
    "service_worker": "/scripts/background.js"
  },
  "commands": {
    "copyTaskNameParentIncluded": {
      "suggested_key": {
        "default": "Ctrl+U",
        "mac": "Command+U"
      },
      "description": "Copy task name with parent tasks names"
    },
    "copyOnlyTaskName": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "Command+Shift+U"
      },
      "description": "Copy task name without parent tasks names"
    }
  }
}
